<% if @user %>
  <h2><%= t("title.transfer.myTransfers") %> (<%= @transfers.size %>)</h2>
<% else %>
  <h2>Transfers</h2>
<% end %>
<% if @transfers && @transfers.size > 0 %>
  <% paginated_section @transfers do %>
  <%= render :partial => "transfertable", :locals => { :collection => @transfers } if @transfers %>
  <% end %>
<% end %>
<% if @inverse_transfers && @inverse_transfers.size > 0 %>
  <h2><%= t("title.transfer.transfersToMe") %> (<%= @inverse_transfers.size %>)</h2>
  <%= render :partial => "transfertable", :locals => { :collection => @inverse_transfers } if @inverse_transfers %>
<% end %>
