<% content_for(:head) do %>
 <%= GMap.header(:hl=> params[:locale]) if @map %>
 <%= @map.to_html if @map %>
<% end %>
<div class="centered"><%= render :partial => "usermenu", :locals => {:item => @item} %></div>
<div id="col1">
  <h1><%=h @item.title %></h1>         
  <%= render :partial => "items/itemtype", :locals => { :item => @item } %>
  <%= render :partial => "share/images", :locals => {:images => @item.images} %>
  <% if @item.status %>
    <div class="left box ui-corner-all font-small">
      <% if @item.transfer %>
        <span class="float-right"><%= t("resources.status") %>: <%= link_to t(@item.itemstatus), transfer_path(@item.transfer) %></span>
      <% else %>
        <span><%= t("resources.status") %>: <%= render :partial => "items/itemstatus_with_users", :locals => { :item => @item, :owner => @item.owner  } %></span>
      <% end %>
      <% if @item.from || @item.till %>
        <br /><br />
        <p class="font-small">
          <%= t("resources.available").html_safe %>:
          <%
             @begin = @item.created_at
             @end = Time.now
          %>
          <% if @item.from %>
             <span><%= t("resources.from") %> <%= l @item.from.to_date %></span>
             <% @begin = @item.from %>
          <% end %>

          <% if @item.till %>
             <span><%= t("resources.till") %> <%= l @item.till.to_date %></span>
             <% @end = @item.till %>
          <% end %>
          <% if @begin and @end %>
            <br />
            <%= t("resources.duration") %>:
            <%= distance_of_time_in_words(@begin, @end) %>
         <% end %>
        </p>
      <% end %>
    </div>
  <% end %>
 <div class="box ui-corner-all tags">
  <% if !@item.tags.empty? %>
    <p class="font-smaller">
    <%= t("tags") %>:
    <% for tag in @item.tags %>
        <span><%= link_to tag, :controller => :items, :tag => tag.name %></span>
      <% end %>
    </p>
  <% end %>
  
 
  <% if @item.description %>
    <p><%= @item.description %></p>
  <% end %>
  <% if @item.item_attachments.count > 0 %>
    <div class="attachments">
    <p class="font-smaller"><%= t("resources.attachedResources").html_safe %> (<%= @item.item_attachments.count %>)</p>
    <% @item.item_attachments.each do |attachment| %>
      <p class="font-smaller"><%= link_to image_tag(attachment.item.images.first.image.url("tiny")), item_path(attachment.item) if attachment.item && attachment.item.images && attachment.item.images.first %>
      <%= link_to attachment.item.title, item_path(attachment.item) if attachment.item %></p>
    <% end %> 
    </div>
  <% end %>
  </div>
  <%= render :partial => "share/pings", :locals => {:pings => @item.pings, :pingable => @item} %>
</div>
<div id="col2"> 
  <% if logged_in? and ( @location && !@locations_json.blank? ) %>
    <h3><%= t("resources.location") %></h3> 
    <%= render :partial => "locations/location", :locals => {:location => @location} %>
    <%= render :partial => "share/map", :locals => { :locations => @locations_json } %>
  <% end %> 
  <% if @items_related_inverse.size > 0 && @item.tags.size > 0 %>
    <div id="items-related">
      <h3><%= @items_related_title %> (<%= @items_related_inverse.size %>)</h3>
      <ul>
        <% for item in @items_related_inverse do %>
          <%= render :partial => "itemrelated", :locals => { :item => item, :mainitem => @item } %>
        <% end %>
      </ul>
      <div class="clear"></div>
    </div>
  <% end %>
  <% if @events.size > 0 %>
    <h3>Events (<%= @events.size %>)</h3>
    <ul class="font-smaller box ui-corner-all">
      <% for event in @events do %>
        <li>
          <%= render :partial => "events/eventaction", :locals => { :event => event } %>
          <%= t("start") %>: <%= l event.from, :format => :short if event.from %><br />
          <%= t("end") %>: <%= l event.till, :format => :short if event.till %><br />
        </li>
      <% end %>
    </ul>
  <% end %>
  <%= render :partial => "share/comments", :locals => {:commentable => @item, :comments => @comments} %>
</div>
<div class="clearfix"></div>