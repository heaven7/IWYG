<div class="list-item <%=h item.itemtype.downcase if item.item_type_id? %> <%=h is_need?(item) %> ui-corner-all">
  <%= render :partial => "items/usermenu", :locals => {:item => item} if logged_in? and item.owner == current_user %>
  <div class="item-type">
    <%= image_tag "icons/icon_#{item.itemtype.downcase}.png", :title => item.localized_itemtype.html_safe, :alt => item.localized_itemtype.html_safe %>
  </div>
  <div class="item-status">
    <%= render :partial => "items/itemstatus", :locals => { :item => item } %>    
  </div>
  <p class="font-small"><%= link_to shorten(item.title, 18), item, :title => item.title  if item.title %></p>
  <% if item.images.first %>
    <div class="image-big ui-corner-all">
      <%= link_to image_tag(item.images.first.image.url(:small)), item, :title => item.title, :class => "ui-corner-all" %>
    </div>
  <% else %>
    <div class="details">
      <p class="font-small"><%=h shorten(item.description) if item.description %></p>
    </div>
  <% end %>
    <div class="item-bottom">
      <span class="left"><%= link_to_unless_current image_tag(microThumb(item.owner), :title => item.owner.login), item.owner %></span>
      <span class="font-smaller right"><%= distance_of_time_in_words(item.created_at, Time.now) %> <%= t("ago") %></span>
    </div>
</div>