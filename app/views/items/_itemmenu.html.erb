<% if logged_in? %>
  <ul class="font-smaller horizontal">
  <% if current_user == item.creator %>
    <li class="button"><%= link_to t("edit").html_safe, edit_polymorphic_path([@user, item]) %></li>
    <li class="button"><%= link_to t("delete").html_safe, polymorphic_path([@user, item]),
          :confirm => t("confirm_delete").html_safe,
          :method => :delete %>
    </li>
  <% else %>
    <%= render partial: "share/social/followbuttons", :locals => { user: current_user, model: item } %>
    <%= render partial: "share/social/likebuttons", :locals => { user: current_user, model: item } %>
  <% end %>
  </ul>
<div class="clear" ></div>
<% end %>
