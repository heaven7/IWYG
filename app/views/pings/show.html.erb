<div id="col1" class="ping">
  <h1>
    <%= t("ping.of") %> <%= @ping.pingedOn? %> 
  </h1>
  <p class="right box ui-corner-all font-small <%= statusTitle(@ping) %>">
    <%= t "ping.table.status" %>: <%= t statusTitle(@ping) %>
  </p>
  <p class="font-smaller">
      <%= t("by") %> <%= link_to pingerOf(@ping).login, profile_path(pingerOf(@ping).login) %>
  </p>

  <em class="ping body">
  <%=h @ping.body %>
  </em>
  <% if @ping.created_at %>
    <p class="font-smaller"><%= t("created_at") %> <%=h @ping.created_at %></p>
  <% end %>
  <% if @ping.accepted_at %>
    <p class="font-smaller"><%= t("accepted_at") %> <%=h @ping.accepted_at %></p>
  <% end %>
  <% if @ping.status == 1 and holder?(@ping.pingable_id, @ping.pingable_type) %>
    <span class="button"><%= link_to t("accept"), accept_ping_path(@ping), :method => :put %></span>
    <span class="button"><%= link_to t("decline"), decline_ping_path(@ping), :method => :put %></span>
  <% end %>
  <%= render :partial => "pings/pingmenu", :locals => { :ping => @ping} %>
</div>
<div id="col2">
  <%= render :partial => "share/comments", :locals => {:commentable => @ping, :comments => @comments} %>
</div>
<div class="clearfix"></div>