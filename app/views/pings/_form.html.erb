<% form_for ([pingable, Ping.new]) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :pingable_id, :value => pingable.id %>
  <%= f.hidden_field :pingable_type, :value => pingable.class %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <% if pingable.class.to_s == "Item" %>
    <div class="button"> 
    </div>
  <% elsif pingable.class.to_s == "Transfer" %>
    <%= t("ping.transfer") %><br />
  <% end %>
  <p>
    <%= f.text_area :body, :class => "ui-corner-all" %>
  </p>
  <p>
    <%= f.submit t("ping.this"), :class => "ui-corner-all" %>
  </p>
<% end %>
