<ul class="item-collection">
  <% for itemType in itemTypes do %>
    <li>
      <% if taken == 1
          action = :taken
        else
          action = :given
        end
      %>
      <% if params[:user_id] %>
        <%= image_tag(("icons/icon_" + itemType.title).downcase + ".png") + t( itemType.title.downcase, :count =>  resources[itemType.title.downcase.to_sym][action].size ).html_safe %>
      <% else %>
        <%= link_to image_tag(("icons/icon_" + itemType.title).downcase + ".png") + t( itemType.title.downcase, :count => resources[itemType.title.downcase.to_sym][action].size ).html_safe, 
            items_path( "q[item_type_id_eq]" => itemType.id, "q[need_equals]" => need)
        %>
      <% end %>
    </li>
  <% end %>
</ul>