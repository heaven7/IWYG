<% content_for :head do %>
  <script type="text/javascript">

    $(document).ready(function (){
       $('#user_username').focus();
    });
  </script>
<% end %>

<fieldset class="formular login shadowed ui-corner-all">
  <br/>
  <%= form_for(@user, :as => :user, :url => session_path(:user)) do |f| -%>
    <p>
      <label for="user_username"><%= t("login.label.login") %></label>
      <%= f.text_field :username %>
    </p>
    <br />
    <p>
      <label for="user_password"><%= t("login.label.password") %></label>
      <%= f.password_field :password %>
    </p>
    <br />
    <p><%= f.check_box :remember_me %><label for="user_remember_me"><%= t("login.label.remember") %></label></p>

    <div class="formbutton">
			<label>&nbsp;</label>
			<%= submit_tag t("login.label.submit"), :id => "submit" %>
		</div>
  <% end -%>
</fieldset>
