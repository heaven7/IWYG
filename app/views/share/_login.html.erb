<fieldset class="formular login shadowed">
  <br/>
  <% form_for new_user_session_path do |f| -%>
    <p>
      <label for="login"><%= t("login.label.login") %></label>
      <%= f.text_field :login %>
    </p>
    <br />
    <p>
      <label for="password"><%= t("login.label.password") %></label>
      <%= f.password_field :password %>
    </p>
    <br />
    <%# if devise_mapping.rememberable? -%>
      <p><%# f.check_box :remember_me %> <%# f.label :remember_me %></p>
    <%# end -%>
    
    <div class="formbutton"><%= submit_tag t("login.label.submit") %></div>
  <% end -%>
</fieldset>
<p>
 <%# render :partial => "devise/shared/links" %>
</p>