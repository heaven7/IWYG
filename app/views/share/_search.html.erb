<div id="search">                              
<div id="searchform">
<%= form_tag @search, :method => :get do %>
<% if params[:controller] == "items" %>
  <%= text_field_tag :title_contains  %>
  <div id="searchextended" class="ui-corner-all">
    <h3 class="bold"><%= t("searchOptions").html_safe %></h3>
    <table>
      <tr>
        <td class="font-small"><%= t("resources.available").html_safe %><br /> (<%= t("from") %> - <%= t("till") %>)</td>
        <td class="row-big">
        <%= text_field_tag :from_gte, '', {:id => "from", :size => 8} %> -
        <%= text_field_tag :till_lte, '', {:id => "till", :size => 8} %>
        </td>
      </tr>
      <tr>
        <td class="font-small"><%= t("resources.amount") %></td>
        <td class="row-big">
        <%= text_field_tag :amount_equals, '', {:id => "amount", :size => 8} %> &nbsp;
        <%= select_tag(:measure_id_equals, options_from_collection_for_select(@measures, :id, :title), :include_blank => true) %>
        </td>
      </tr>
      <tr>
        <td class="font-small"><%= t("searchIn") %></td>
        <td class="row-big">
        <%= select_tag( :item_type_id_equals, options_from_collection_for_select(@itemtypes, :id, :localized_title), :include_blank => true) %>
        <%# f.collection_select :item_type_id_equals, @itemtypes, :id, :localized_title, :include_blank => true %>
        </td>
      </tr>
    </table>
  </div>

  <% elsif params[:controller] == "users" %>

    <%= text_field_tag :login_contains  %>

  <% end %>
  <%= submit_tag "Go", :name => nil %>
  <% end %>
  </div>                                     
  <% if params[:controller] == "items" %>
    <div id="searchmenu">
      <a href="#" id="advanced_search" class="icon-arrow-down"><%= t("options") %></a>
    </div>                                 
  <% end %>
</div> 