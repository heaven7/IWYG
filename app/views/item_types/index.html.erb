<h1>Listing item_types</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @item_types.each do |item_type| %>
  <tr>
    <td><%=h item_type.title %></td>
    <td><%=h item_type.description %></td>
    <td><%= link_to 'Show', item_type %></td>
    <td><%= link_to 'Edit', edit_item_type_path(item_type) %></td>
    <td><%= link_to 'Destroy', item_type, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item_type', new_item_type_path %>