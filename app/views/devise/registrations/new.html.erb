<div class="registration">
  <h1><%= t("title.register") %></h1>
  <%= semantic_form_for @user, :html => {:class => "formular shadowed ui-corner-all"} do |f| %>
    <%= render "share/error_messages", :target => @user %>
    <%= f.inputs do %>
      <%= f.input :login, :label => t("register.label.login") %>
      <%= f.input :email, :label => t("register.label.email") %>
      <%= f.input :password, :label => t("register.label.password"), :required => true %>
      <%= f.input :password_confirmation, :label => t("register.label.confirmPassword"), :required => true %>
      <p><abbr>*</abbr> <%= t("register.mandatoryFields") %></p>
    <% end %>
  
    <%= f.actions do %>
      <%= f.action :submit, :label => t("register.signup"), :button_html => {:id => "submit"} %>
    <% end %>
  <% end %>   
  <%= render :partial => "devise/shared/links" %>
</div>


