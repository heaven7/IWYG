<%= form_for(resource, :as => :user, :url => "/users/confirmation", :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
	<%= f.email_field :email, :autofocus => true, :class => "ui-corner-all #{css_class}" %>
	<%= f.submit t("send"), :class => "ui-corner-all #{css_class}" %>
<% end %>
