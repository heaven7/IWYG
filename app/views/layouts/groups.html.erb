<div id="group">
    <h1 class="grouptitle">
      <%=h link_to @group.title, @group %>
      <% if @active_menuitem_l1 %>
        &raquo; <%= link_to @active_menuitem_l1, @active_menuitem_l1_link %>
      <% end %>
      <% if @active_menuitem_l2 %>
				<% if params[:controller] == "items" %>
	        &raquo; <%= link_to t("#{@active_menuitem_l2}.plural").html_safe, @active_menuitem_l2_link %>
				<% else %>	
        	&raquo; <%= link_to t("#{@active_menuitem_l2}").html_safe, @active_menuitem_l2_link %>
				<% end %>
      <% end %>
    </h1>
    <%  if logged_in? && @group.locations %>
      <p><%= render :partial => "locations/location", :locals => {:location => @group.locations.first} %></p>
    <% end %>
    <%= yield %>
  </div>
</div>
<%= parent_layout 'application' %>
